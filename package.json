{
  "name": "diskwipe",
  "version": "1.4.0",
  "description": "Secure disk wiping utility",
  "main": "main.js",
  "requestedExecutionLevel": "requireAdministrator",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish=always",
    "dist": "electron-builder --publish=never",
    "deploy": "electron-builder --publish=always"
  },
  "dependencies": {
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.diskwipe.app",
    "productName": "DiskWipe",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css"
    ],
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "include": "uninstaller.nsh",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "artifactName": "DiskWipe-Setup-${version}.exe"
    },
    "portable": {
      "requestExecutionLevel": "admin"
    },
    "publish": {
      "provider": "github",
      "owner": "wslabn",
      "repo": "diskwipe"
    }
  }
}